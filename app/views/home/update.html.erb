<style>
  .c1{
    background-color: lightgreen;
    margin-bottom: 20px;
    margin-top:0px;
    margin-left: 300px;
    margin-right: 300px;

  }
  h1{
    margin-bottom: 20px;
    font-bold:true;
    font-family: DialogInput;
  }

</style>

<div class="c1">
  <h2> 글 수정</h2>
  <form method="post" enctype="multipart/form-data" action="/home/real_update/<%=@post.id%>">
    <div class="form-group">
      <label for="title">제목</label>
      <input type="text" class="form-control"  value="<%=@post.title%>"id="title" name="title" placeholder="글 제목">
    </div>
    <div class="form-group">
      <label for="writer">글쓴이</label>
      <input type="text" class="form-control" value="<%=@post.writer%>"id="writer" name="writer" placeholder="글쓴이">
    </div>
    <div class="form-group">
      <textarea  rows="7"  class="form-control" id="content" name="content" placeholder="내용"><%=@post.content%></textarea>
    </div>
    <div class="form-group">
      <label for="exampleInputFile">파일 첨부</label>
      <input type="file" name="img" id="exampleInputFile">
    </div>
    <button type="submit" class="btn btn-default">글 작성</button>
  </form>

</div>